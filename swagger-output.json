            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "type": "string",
                  "example": "Tuuguu"
                },
                "lastName": {
                  "type": "string",
                  "example": "Dambasuren"
                },
                "email": {
                  "type": "string",
                  "example": "tuuguu@example.com"
                },
                "phoneNumber": {
                  "type": "string",
                  "example": "99881175"
                },
                "password": {
